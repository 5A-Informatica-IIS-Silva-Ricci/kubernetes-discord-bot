<!-- Questo file contiene le impostazioni del environment.logger che serve solamente a loggare nella console alcune informazioni-->
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%boldCyan(%d{dd-MM-yyyy HH:mm:ss}) %boldGreen(%environment.logger{0}) %highlight(%level) %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="deng" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
